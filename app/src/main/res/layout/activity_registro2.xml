<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="282dp"
            android:layout_height="137dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/im1_e" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/lblPretitulo"
            android:textColor="#83992F"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            tools:layout_editor_absoluteX="-14dp"
            tools:layout_editor_absoluteY="173dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal"
            android:text="@string/lblRegistrarse"
            android:textColor="#071907"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="-14dp"
            tools:layout_editor_absoluteY="173dp" />


        <TextView
            android:id="@+id/lblMensajeCorro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal"
            android:text="@string/lblMensajeCorreo"
            android:textColor="#071907"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="-14dp"
            tools:layout_editor_absoluteY="173dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="40px">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="400px"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/txtCodigo"
                    android:layout_marginLeft="15px"
                    android:layout_width="600px"
                    android:layout_height="wrap_content"
                    android:hint="@string/txtCodigo" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnValidar"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_margin="50px"
                android:layout_weight="1"
                android:background="@drawable/mi_boton"
                android:text="@string/btnValidar"
                android:textAllCaps="false"
                android:textSize="15sp" />
        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/btnRegistrar"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="50px"
                android:text="@string/btnRegistrar"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:background="@drawable/mi_boton"/>
            <Button
                android:id="@+id/btnSalir"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="50px"
                android:text="@string/btnSalir"
                android:textAllCaps="false"
                android:background="@drawable/mi_boton2"
                android:textSize="18sp" />
        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>